<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterRunFragment">

    <!-- TODO: Update blank fragment layout -->
    <DatePicker
        android:id="@+id/datepicker_run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_run_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_playlist_add_black_24dp"
        app:backgroundTint="@color/design_default_color_surface"/>

    <TableRow>
        <TextView
            android:id="@+id/textview_run_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_run_rows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            />
    ></TableRow>




</RelativeLayout>